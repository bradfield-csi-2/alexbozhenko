{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build_active",
			"command": "/usr/bin/gcc",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			// some interesting flags: https://stackoverflow.com/questions/3375697/useful-gcc-flags-for-c
			"args": [
				"-Wall",
				"-Wextra",
				"-Wconversion",
				"-Werror",
				"-Wfloat-equal",
				"-Wmissing-noreturn",
				"-Wmissing-prototypes",
				"-Wsequence-point",
				"-Wshadow",
				"-Wstrict-prototypes",
				"-Wpointer-arith",
				"-Wcast-align",
				"-Wswitch-default",
				"-Wswitch-enum",
				"-Wunreachable-code",
				"-Wformat=2",
				"-Wformat-signedness",
				"-pedantic",
				// This is to detect overflows 
				// Need to install the lib using:
				// dnf install libubsan.x86_64
				"-fsanitize=undefined",
				"-lm", //lib math
				"-std=c18",
				"-ggdb3",
				"${file}",
				"${fileDirname}/../lib/*",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"type": "shell",
			"label": "run_active",
			"dependsOn": [
				"build_active"
			],
			"command": "/usr/bin/bash",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"args": [
				"-c",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}